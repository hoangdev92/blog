<div class="container text-center col-12">
  <h2 class="mb-5">Đăng Ký</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'mb-5') do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field col-12">
      <%= f.label :email , class: 'col-2'%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-2 input_register',  placeholder: 'abc@gmail.com' %>
    </div>

    <div class="field col-12">
      <%= f.label :password, class: 'col-2' %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'col-2 input_register', placeholder: 'ít nhất 6 kí tự' %>
    </div>

    <div class="field col-12">
      <%= f.label :password_confirmation, class: 'col-2' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-2 input_register', placeholder: 'nhập lại mật khẩu' %>
    </div>

    <div class="actions">
      <%= f.submit "Đăng Ký", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>