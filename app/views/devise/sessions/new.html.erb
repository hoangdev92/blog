<div class="container text-center mt-5 mb-5 col-12">
  <h2 class="mb-4 text-dark">Đăng nhập</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field col-12">
      <%= f.label :email, class: 'label_login col-1' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-2' %>
    </div>

    <div class="field col-12">
      <%= f.label :password, class: 'label_login col-1' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'col-2' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field col-12">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Đăng Nhập", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>